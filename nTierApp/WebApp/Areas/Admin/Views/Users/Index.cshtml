@model IEnumerable<Entities.Models.AppUser>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Kullanıcı Yönetimi</h2>
        <a asp-action="Create" class="btn btn-primary">Kullanıcı Oluştur</a>
    </div>

    <table class="table table-striped table-hover mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Kullanıcı ID</th>
                <th>İsim</th>
                <th>Soyisim</th>
                <th>Kullanıcı Adı</th>
                <th>E-posta</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@user.Id">
                            <i class="fa-solid fa-edit"></i> Rolleri Güncelle
                        </a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.Id">
                            <i class="fa-solid fa-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>