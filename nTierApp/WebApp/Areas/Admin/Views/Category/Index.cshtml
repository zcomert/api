@model IEnumerable<Category>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Kategoriler</h2>
        @if(User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">Kategori Oluştur</a>
        }
    </div>

    <table class="table table-striped table-hover mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Kategori Adı</th>
                @if(User.IsInRole("Admin"))
                {
                    <th>İşlemler</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.CategoryName</td>
                    @if(User.IsInRole("Admin"))
                    {
                        <td>
                            <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@category.CategoryId">
                                <i class="fa-solid fa-edit"></i> Güncelle
                            </a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@category.CategoryId">
                                <i class="fa-solid fa-trash"></i> Sil
                            </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>