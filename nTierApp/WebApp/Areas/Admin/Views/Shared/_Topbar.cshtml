@{
    var title = ViewData["Title"] as string ?? "Admin";
}
<header class="d-flex align-items-center justify-content-between px-4 py-3 bg-white border-bottom">
    <div class="d-flex align-items-center gap-3">
        <span class="fw-semibold text-uppercase small text-muted">Admin</span>
        <span class="fs-5 fw-semibold text-dark">@title</span>
    </div>
    <div class="d-flex align-items-center gap-3">
        <span class="text-muted">
            <i class="fa fa-user-shield me-1"></i>
            Admin
        </span>
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-secondary">Logout</button>
        </form>
    </div>
</header>
