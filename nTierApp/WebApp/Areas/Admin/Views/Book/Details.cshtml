@model Book

@{
    ViewData["Title"] = "Kitap Detayları";
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h3 class="mb-0">
            <i class="fa fa-info-circle me-2"></i> @ViewData["Title"]: @Model.Title
        </h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Başlık</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Fiyat</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa fa-arrow-left me-1"></i> Listeye Dön
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="fa fa-edit me-1"></i> Düzenle
        </a>
    </div>
</div>
