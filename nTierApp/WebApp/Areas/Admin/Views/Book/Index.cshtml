@model IEnumerable<Book>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="fa fa-book me-2"></i> Kitap Yönetimi
            </h3>
            <a asp-area="Admin"
               asp-controller="Book"
               asp-action="Create"
               class="btn btn-success">
                <i class="fa fa-plus me-1"></i> Yeni Kitap
            </a>
        </div>
    </div>
    <div class="card-body">
        <h5 class="card-title mb-3">Mevcut Kitaplar (@Model.Count())</h5>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" style="width: 10%;">ID</th>
                        <th scope="col" style="width: 40%;">Kitap Adı</th>
                        <th scope="col" style="width: 20%;">Fiyat</th>
                        <th scope="col" class="text-center" style="width: 30%;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center">
                                <div class="alert alert-warning my-3" role="alert">
                                    <i class="fa fa-info-circle me-2"></i> Henüz hiç kitap eklenmemiş.
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Title</td>
                                <td>@item.Price.ToString("C")</td>
                                <td class="text-center">
                                    <a asp-area="Admin"
                                       asp-controller="Book"
                                       asp-action="Details"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-info me-1">
                                        <i class="fa fa-eye"></i> Detay
                                    </a>
                                    <a asp-area="Admin"
                                       asp-controller="Book"
                                       asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-primary me-1">
                                        <i class="fa fa-edit"></i> Düzenle
                                    </a>
                                    <a asp-area="Admin"
                                       asp-controller="Book"
                                       asp-action="Delete"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer text-muted">
        Toplam @Model.Count() adet kitap bulunmaktadır.
    </div>
</div>

