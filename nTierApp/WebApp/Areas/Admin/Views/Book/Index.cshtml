@model IEnumerable<Book>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Kitaplar (@Model.Count())</h2>
    <a asp-area="Admin" 
    asp-controller="Book" 
    asp-action="Create" 
    class="btn btn-primary">
        <i class="fa fa-plus me-1"></i> Yeni Kitap
    </a>
</div>

@foreach (var item in Model)
{
    <p><b>@item.Id</b> @item.Title <i>@item.Price.ToString("C")</i></p>
}

