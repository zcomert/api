@model Book

@{
    ViewData["Title"] = "Kitap Silme Onayı";
}

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">
            <i class="fa fa-trash me-2"></i> @ViewData["Title"]
        </h3>
    </div>
    <div class="card-body">
        <h5 class="card-title">"<strong>@Model.Title</strong>" adlı kitabı silmek istediğinizden emin misiniz?</h5>
        <p class="text-muted">Bu işlem geri alınamaz.</p>
        
        <div class="my-3">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                <dt class="col-sm-3">Fiyat</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
            </dl>
        </div>

        <form asp-action="Delete">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-check me-1"></i> Evet, Sil
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa fa-times me-1"></i> İptal
            </a>
        </form>
    </div>
</div>
