@model IEnumerable<Book>

@{
    ViewData["Title"] = "Kitaplar";
}

<h1>Kitaplar</h1>

@if (Model == null || !Model.Any())
{
    <p>No books available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th class="text-end">Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td class="text-end">@item.Price.ToString("C")</td>
                    <td>
                        <a asp-controller="Book" 
                        asp-action="Details" 
                        asp-route-id="@item.Id">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
