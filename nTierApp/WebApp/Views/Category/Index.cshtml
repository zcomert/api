@model IEnumerable<Category>

<h3 class="display-3">
    Kategoriler
</h3>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Kategori Adı
            </th> 
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>
                    @category.CategoryId
                </td>
                <td>
                    @category.CategoryName
                </td>
                <td>
                    ?
                </td>
            </tr>
        }
    </tbody>
</table>    